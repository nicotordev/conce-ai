# Node TLS certificate validation (development only)
NODE_TLS_REJECT_UNAUTHORIZED="0"

# PostgreSQL database connection strings
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"
DIRECT_URL="postgresql://user:password@host:5432/database?sslmode=require"

# Node environment mode
NODE_ENV="development"

# Application URLs
NEXT_PUBLIC_BASE_URL='http://localhost:3000'
NEXT_PUBLIC_API_URL='http://localhost:3000/api'

# reCAPTCHA configuration
NEXT_PUBLIC_RECAPTCHA_SITE_KEY='your_recaptcha_site_key'
RECAPTCHA_SECRET_KEY='your_recaptcha_secret_key'

# Google OAuth credentials
GOOGLE_CLIENT_ID='your_google_client_id.apps.googleusercontent.com'
GOOGLE_CLIENT_SECRET='your_google_client_secret'

# Security and encryption
ENCRYPTION_KEY='your_encryption_key_base64'
AUTH_SECRET='your_auth_secret'

# Email configuration (Brevo/Sendinblue)
BREVO_SENDER_NAME='Your App Name - No reply'
BREVO_SENDER_EMAIL='no-reply@yourdomain.com'
BREVO_SMTP_SERVER='smtp-relay.brevo.com'
BREVO_SMTP_PORT=587
BREVO_SMTP_LOGIN='your_brevo_smtp_login'
BREVO_SMTP_PASSWORD='your_brevo_smtp_password'

# AI Services
CONCE_AI_API_KEY='your_conce_ai_api_key'
GOOGLE_GENERATIVE_AI_API_URL='https://generativelanguage.googleapis.com/v1'
OPENAI_API_KEY='your_openai_api_key'

# File Upload Service
NICODROPZONE_API_KEY='your-nicodropzone-api-key'
NICODROPZONE_BASE_URL='https://assets.yourdomain.com/api/v1'

# Additional Services
BRIGHT_DATA_TOKEN='your_bright_data_token'
CLOUDFARE_AI_WORKER_TOKEN='your_cloudflare_worker_token'

# Admin Configuration
ADMIN_EMAIL='admin@yourdomain.com'

# Monitoring
SENTRY_AUTH_TOKEN='your_sentry_auth_token'

# Application Prompts (Base64 encoded)
